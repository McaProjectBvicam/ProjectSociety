    {{>navbar}}
            <div class="hero-image">
            <div class="hero-text">
                <h1 class="text-light text-capatalize display-4">Welcome To Society Maintenance Tracker </h1>
                    <form action="/index" method="POST">
                    <label style="font-size:20px" for="socname">Enter your Society Name: </label>
                    <input name="socname" type="text" class="bg-light" placeholder="Enter Your Society Name">
                    
                    <input value="submit" type="submit" class="btn btn-dark btn-lg" >
                    
                    </form>
                    <a href="/Regsoc" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Register Your Society Here</a>
            </div>
        </div>
    
</body>

</html>