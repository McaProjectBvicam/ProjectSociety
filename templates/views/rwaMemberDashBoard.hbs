	</div>
</div>
</body>
<script>
var bools=false;
function TakeValue() {
	document.getElementById("demo").innerHTML = "Paragraph changed.";
}

function HideSlideBar(){
	document.getElementById("SlideBarSectionID").style.width="0";
	document.getElementById("FullPageID").style.width="100%";
document.getElementById("FullPageID").style.marginLeft = "0";
}


function OpenslideBar(){
document.getElementById("SlideBarSectionID").style.width="20%";
document.getElementById("FullPageID").style.width="80%";
document.getElementById("FullPageID").style.marginLeft = "19%";
}

function showUser(){
	if(!bools)
	{
		document.getElementById("UserInfoID").style.width="20%";
		bools=true;
	}else
	{
		document.getElementById("UserInfoID").style.width="0";
		bools=false;
	}
}

function onloadpage()
{
	document.getElementById("sbitem1").style.display = "block";
	document.getElementById("sbitem2").style.display = "none";
	document.getElementById("sbitem3").style.display = "none";
	document.getElementById("sbitem4").style.display = "none";
	document.getElementById("sbitem5").style.display = "none";
	
}

function allhide()
{
	document.getElementById("sbitem1").style.display = "none";
	document.getElementById("sbitem2").style.display = "none";
	document.getElementById("sbitem3").style.display = "none";
	document.getElementById("sbitem4").style.display = "none";
	document.getElementById("sbitem5").style.display = "none";
	
}

function showItem1()
{
	allhide();
	document.getElementById("sbitem1").style.display = "block";
	
}

function showItem2()
{
	allhide();
	document.getElementById("sbitem2").style.display = "block";
}

function showItem3()
{
	allhide();
	document.getElementById("sbitem3").style.display = "block";
}

function showItem4()
{
	allhide();
	document.getElementById("sbitem4").style.display = "block";
}

function showItem5()
{
	allhide();
	document.getElementById("sbitem5").style.display = "block";
}




</script>
