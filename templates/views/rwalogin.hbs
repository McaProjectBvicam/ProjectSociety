<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>RWA Login Page</title>
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                    <h2>RWA Login </h2>


{{#if message}}
<div style="text-align: center" class="alert alert-{{message.type}}";>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
<strong>{{message.intro}}</strong>
</div>
{{/if}}

                    <form action="/rwalogin" method="POST">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" placeholder="Enter email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="pass">Password</label>
                        <input name="password" type="password" class="form-control"  placeholder="Password" id="myInput">
                        </div>
                         <input type="checkbox" onclick="myFunction()">Show Password<br>
                        <button type="submit" class="btn btn-primary">Submit</button>
                       
                        <div>
                            <a href="/socMemRegister" class="text-center new-account">Create an account</a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
    {{>footer}}
</body>
 <script>
     function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
 
 </script>

</html>